<ul>
    <% @tshirts.each do |tshirt| %>
    <div class = "index-column">
        <li><img src = "<%= tshirt.img_url %>"></li>
        <li><%=  tshirt.color %></li>
        <li><%= tshirt.character %></li>
        <li><%= tshirt.size %></li>
       <%= link_to "show t-shirt", tshirt_path(tshirt), class: "custom-link" %>  | <%= link_to 'add a review',new_tshirt_review_path(tshirt), class: "custom-link" %></li>
        <br>
    </div>
    <% end %>
</ul>