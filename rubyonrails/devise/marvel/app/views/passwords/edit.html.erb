<h1>Edit password</h1>
<%= form_with model: Current.user, url: edit_password_path do |f| %>
    <p>
        <%= f.label "password:" %><br>
        <%= f.password_field :password %>
    </p>

    <p>
        <%= f.label "password_confirmation:" %><br>
        <%= f.password_field :password_confirmation %>
    </p>

    <p>
        <%= f.submit "update" %>
    </p>
<%= end %>